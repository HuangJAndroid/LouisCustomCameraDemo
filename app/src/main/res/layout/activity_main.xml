<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_rl_cp_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<RelativeLayout
    android:id="@+id/group"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.louisgeek.louiscustomcamerademo.CameraPreview
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" />

    <ImageView
        android:id="@+id/iv_show"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/sticker"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>

<ImageView
    android:background="@mipmap/ic_launcher"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/id_iv_flash_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:padding="15dp"
            android:gravity="center"
            android:src="@mipmap/camera_flash_off"
            android:onClick="onClick"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true" >

        <!--<ImageView
            android:id="@+id/torch_switch_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:src="@mipmap/camera_flash_off"
            android:onClick="onClick"
             />-->


       <!-- <ImageView
            android:id="@+id/choose_picture_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:src="@mipmap/camera_config"
            android:onClick="onClick"
            />-->

        <ImageView
            android:id="@+id/id_iv_shutter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:padding="15dp"
            android:src="@mipmap/camera_normal_new"
             />
    </RelativeLayout>

</RelativeLayout>